@model GameOfLife.Models.BoardSizeViewModel

<h2>Change Board Size</h2>

<form method="get">
    <div class="form-group row">
        <label asp-for="LenX" class="col-sm-3"></label>
        <div class="col-sm-9">
            <input asp-for="LenX" type="text" class="board-size-input form-control" />
            <span asp-validation-for="LenX"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LenY" class="col-sm-3"></label>
        <div class="col-sm-9">
            <input asp-for="LenY" type="text" class="board-size-input form-control" />
            <span asp-validation-for="LenY"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <input type="submit" value="Change" class="btn btn-primary" />
        </div>
    </div>
</form>